{% extends 'base.html.twig' %}

{% block title %}{{ tricks.title }} / SnowTricks{% endblock %}

{% block body %}
<section class="details-tricks pb-5">
    <!-- Main image -->
    <div class="tricks-img-main">
        <img class="img-fluid" src="{{ asset('assets/img/tricks/01-Default.png') }}" alt="">
        <span>{{ tricks.title }}</span>
        {% if app.user and app.user.id == tricks.author.id %}
            <div class="links">
                <a href="{{ path('tricks_update', {slug: tricks.slug}) }}" class="update">
                    <i class="fa-sharp fa-solid fa-pencil"></i>
                </a>
                <a href="{{ path('tricks_delete', {slug: tricks.slug}) }}" class="delete">
                    <i class="fa-regular fa-trash-can"></i>
                </a>
            </div>
        {% endif %}
    </div>

    <!-- Medias -->
    <div class="container medias pt-4">
        <div class="row hidden-md-up row-cols-md-3 row-cols-lg-6">
            <!-- Item -->
            <div class="d-flex flex-column mb-4">
                <div class="col">
                    <div class="card">
                        <img height="250" class="card-img-top" src="{{ asset('assets/img/tricks/01-Default.png') }}">
                    </div>
                </div>
            </div>
            <!-- Item -->
            <div class="d-flex flex-column mb-4">
                <div class="col">
                    <div class="card">
                        <iframe height="250" class="card-img-top" src="https://www.youtube.com/embed/V9xuy-rVj9w"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Medias (Button trigger modal) -->
    <div class="mobile-medias d-flex justify-content-center pt-4">
        <button type="button" class="btn" data-toggle="modal" data-target="#mobileMediasModal">Afficher les médias</button>
    </div>

    <!-- Mobile Medias Modal -->
    <div class="modal fade" id="mobileMediasModal" tabindex="-1" role="dialog" aria-labelledby="mobileMediasModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mobileMediasModalLabel">Gestion des médias</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Item -->
                    <div class="my-4">
                        <img height="250" class="card-img-top" src="{{ asset('assets/img/tricks/01-Default.png') }}">
                    </div>
                    <hr>
                    <!-- Item -->
                    <div class="my-4">
                        <iframe height="250" class="card-img-top" src="https://www.youtube.com/embed/V9xuy-rVj9w"></iframe>
                    </div>
                    <hr>
                </div>
                <div class="modal-footer">
                    <button type="button" class="medias-modal-btn btn btn-secondary" data-dismiss="modal">Retour</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="tricks-content container mt-4">
        <span class="description fw-bolder">{{ tricks.description }}</span>
        <div class="infos d-flex flex-row justify-content-center mt-5">
            <span class="mx-4">Catégorie : {{ tricks.category.name }}</span>
            <span class="mx-2">Créer le {{ tricks.createdAt|date('d/m/Y') }} par {{ tricks.author.username }}</span>
            {% if tricks.createdAt != tricks.updatedAt %}
                <span class="mx-2">Modifier le {{ tricks.updatedAt|date('d/m/Y') }} par {{ tricks.author.username }}</span>
            {% endif %}
        </div>
        {% if app.user %}
            <hr>
            <div class="post-comment my-4">
                {{ form_start(createCommentForm) }}
                <div class="d-flex flex-row justify-content-center ">
                    {{ form_row(createCommentForm.comment) }}
                    <button type="submit" class="btn create-comment-btn mx-4">Publier le commentaire</button>
                </div>
                {{ form_end(createCommentForm) }}
            </div>
        {% endif %}
        <hr>
        <div class="comments" id="comments">
            {% for comment in comments.data %}
                <div class="d-flex flex-row justify-content-start mt-4">
                    <img src="{{ asset('assets/img/users/01-Default.svg') }}" alt="">
                    <div class="d-flex flex-column">
                        <span class="px-2 fw-bolder">{{ comment.content }}</span>
                        <span class="px-2 text-muted">
                            Publier le {{ comment.createdAt|date('d/m/Y') }} par {{ comment.author.username }} 
                            | <a href="#">Supprimer le commentaire</a>
                        </span>
                    </div>
                </div>
            {% endfor %}
            {% set path = 'tricks_details' %}
            {% set anchor = 'comments' %}
            {% set slug = tricks.slug %}
            {% set pages = comments.pages %}
            {% set currentPage = comments.page %}
            {% include "_partials/_pagination.html.twig" %}
        </div>
    </div>
</section>
{% endblock %}
