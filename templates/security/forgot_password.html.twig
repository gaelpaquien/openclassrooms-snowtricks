{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <section class="forgot-password d-flex align-items-center py-4">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="text-center my-2">Mot de passe oublié</h1>
                    <form action="" method="post">
                        <div>
                            <label for="inputUsername">Nom d'utilisateur</label>
                            <input type="text" name="username" id="inputUsername" class="form-control" required autofocus>
                        </div>
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <button type="submit" class="mb-3 w-auto">Demander une réinitialisation</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}