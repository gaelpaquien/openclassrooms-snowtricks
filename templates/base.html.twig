<!DOCTYPE html>
<html class="mh-100">
    <head>
        <meta charset="UTF-8" />
        <meta http-esquiv="X-UA-Compatible" content="IE-Edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="robots" content="index, follow">

        <!-- Primary Meta Tags -->
        <meta name="title" content="SnowTricks">
        <meta name="description" content="Création d'un site web collaboratif, permettant aux utilisateur de partager des figures de snowboard.">
        <meta name="author" content="Gaël PAQUIEN">

        <!-- Open Graph / Facebook -->
        <meta property="og:title" content="SnowTricks">
        <meta property="og:description" content="Création d'un site web collaboratif, permettant aux utilisateur de partager des figures de snowboard.">
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://formation.snowtricks.gaelpaquien.com/">
        <meta property="og:image" content="https://formation.snowtricks.gaelpaquien.com/assets/img/image-portfolio-projet-snowtricks.jpg">
        <meta property="og:image:type" content="image/jpeg" >
        <meta property="og:image:width" content="1800" >
        <meta property="og:image:height" content="550" >

        <!-- Favicon & Title -->
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/img/favicon.ico') }}">
        <title>{% block title %}SnowTricks{% endblock %}</title>

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap/bootstrap.min.css')}}">

        <!-- Custom CSS -->
        <link rel="stylesheet" href="{{ asset('assets/css/style.css')}}">

        {% block stylesheets %}{% endblock %}

        <!-- Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous" defer></script>
        <script src="{{ asset('assets/js/bootstrap/bootstrap.bundle.min.js') }}" defer></script>

        <!-- Font Awesome -->
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous" defer></script>
        {% block javascripts %}{% endblock %}
    </head>

    <body class="mh-100">
        <div class="navigation-sticky" id="navigation-sticky">
            <!-- Headband -->
            {% include "_partials/_top_headband.html.twig" %}
            <!-- Navbar -->
            {% include "_partials/_header_nav.html.twig" %}
        </div>

        <!-- Popup -->
        {% include "_partials/_popup.html.twig" %}

        <!-- Check user account -->
        {% if app.user and app.user.isVerified == false %}
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <div class="alert-message">
                    <strong>Votre compte n'est pas activé</strong>, <a href="{{ path('app_activation_resend')}}">renvoyez le lien d'activation</a>
                </div>
            </div>
        {% endif %}

        <!-- Flash messages -->
        {% include "_partials/_flash.html.twig" %}

        <!-- Content -->
        {% block body %}{% endblock %}

        <!-- Footer -->
        {% include "_partials/_footer.html.twig" %}

        <!-- Custom JS -->
        <script src="{{ 'assets/js/popup.min.js' }}" async></script>
    </body>
</html>