{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="register d-flex align-items-center py-4">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="text-center my-2">Inscription</h1>
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    {{ form_row(registrationForm.profile_picture) }}
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <button type="submit" class="mb-3">M'inscrire</button>
                        <a href="{{ path('app_login')}}">Je possède déjà un compte</a>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
