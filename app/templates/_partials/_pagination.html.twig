{% if pages > 1 %}
    <nav class="">
        <ul class="pagination d-flex flex-row justify-content-center mt-5">
            {% if currentPage > 1 %}
                <li class="page-item">
                    <a href="{{ path(path, {slug: slug, p: currentPage - 1}) }}#{{ anchor }}" class="page-link">&lt; Précédent</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link">&lt; Précédent</a>
                </li>
            {% endif %}


            {% for page in 1..pages %}
                <li class="page-item d-flex {% if page == currentPage %}active{% endif %}">
                    <a href="{{ path(path, {slug: slug, p: page}) }}#{{ anchor }}" class="page-link">{{ page }}</a>
                </li>
            {% endfor %}

            {% if currentPage < pages %}
                <li class="page-item">
                    <a href="{{ path(path, {slug: slug, p: currentPage + 1}) }}#{{ anchor }}" class="page-link">Suivant &gt;</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a href="" class="page-link">Suivant &gt;</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}